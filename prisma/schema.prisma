generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id            Int     @id @default(autoincrement()) // Internal Auto-increment ID
  clerk_id      String  @unique                      // Unique Clerk User ID
  email         String  @unique
  username      String? @unique
  first_name    String?
  last_name     String?
  profile_image String?
  created_at    DateTime @default(now())
  updated_at    DateTime @updatedAt

  // API Usage Tracking
  freeStoriesUsed Int @default(0)      // Number of free stories used
  freeStoryLimit  Int @default(7)      // Free story limit per user (default: 7)

  stories       Story[]      @relation("UserStories")
  likes         Like[]       @relation("UserLikes")
  comments      Comment[]    @relation("UserComments")
  apiKeys       UserApiKeys? @relation("UserApiKeys")
}


model Story {
  id           String  @id @default(uuid())
  userId       Int
  user         User    @relation(fields: [userId], references: [id], name: "UserStories")
  storySubject String
  storyType    String
  ageGroup     String
  imageType    String
  storyTitle   String? @db.VarChar(255) // Searchable title extracted from content
  content      Json    // JSON format of generated story
  createdAt    DateTime @default(now())

  // Explore page features
  isPublic     Boolean @default(false)
  viewCount    Int     @default(0)
  likeCount    Int     @default(0)
  rating       Float?  @default(0)
  ratingCount  Int     @default(0)

  images       Image[]   @relation("StoryImages")
  likes        Like[]    @relation("StoryLikes")
  comments     Comment[] @relation("StoryComments")

  // Single field indexes
  @@index([isPublic])         // For public story filtering
  @@index([createdAt])        // For recent sorting

  // Composite indexes for common query combinations
  @@index([isPublic, createdAt])      // Recent public stories
  @@index([isPublic, likeCount])      // Popular public stories
  @@index([isPublic, viewCount])      // Most viewed public stories
  @@index([isPublic, storyType])      // Public stories by type
  @@index([isPublic, ageGroup])       // Public stories by age
  @@index([userId, createdAt])        // User's recent stories
  @@index([userId, isPublic])         // User's public stories for profiles
  @@index([userId, isPublic, createdAt]) // User's recent public stories
}

model Image {
  id        String  @id @default(uuid())
  storyId   String
  story     Story   @relation(fields: [storyId], references: [id], name: "StoryImages")
  prompt    String  @db.Text
  imageUrl  String  @db.Text
  isCover   Boolean @default(false) // To differentiate cover images
  createdAt DateTime @default(now())
}

model Like {
  id        String   @id @default(uuid())
  storyId   String
  story     Story    @relation(fields: [storyId], references: [id], name: "StoryLikes", onDelete: Cascade)
  userId    Int
  user      User     @relation(fields: [userId], references: [id], name: "UserLikes", onDelete: Cascade)
  createdAt DateTime @default(now())

  @@unique([storyId, userId])
  @@index([storyId])
  @@index([userId])
}

model Comment {
  id        String   @id @default(uuid())
  storyId   String
  story     Story    @relation(fields: [storyId], references: [id], name: "StoryComments", onDelete: Cascade)
  userId    Int
  user      User     @relation(fields: [userId], references: [id], name: "UserComments", onDelete: Cascade)
  content   String   @db.Text
  rating    Int?     // 1-5 stars
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([storyId])
  @@index([userId])
}

model UserApiKeys {
  id        String   @id @default(uuid())
  userId    Int      @unique
  user      User     @relation(fields: [userId], references: [id], name: "UserApiKeys", onDelete: Cascade)

  // Encrypted API keys (AES-256 encryption)
  geminiApiKey       String? @db.Text  // Encrypted Gemini API key
  huggingFaceApiKey  String? @db.Text  // Encrypted HuggingFace API key

  // Metadata
  isActive           Boolean  @default(true)
  lastValidated      DateTime?         // Last time keys were validated
  createdAt          DateTime @default(now())
  updatedAt          DateTime @updatedAt

  @@index([userId])
}
